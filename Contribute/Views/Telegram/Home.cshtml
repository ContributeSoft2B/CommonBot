
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TelegramLayout.cshtml";
}
<div class="row title--right"><div class="col-xs-12 text-right"><a href="~/Telegram" class="langchange">中文</a></div></div>
<div class="row">
    <div class="col-md-12 logo-wrap">
        <div class="logo-cont"><img src="~/images/logo.png" class="logo" /></div>
    </div>
    
    <div class="row text--centered"><a href="https://t.me/dcaex_io" target="_blank" class="btn btn-alt font-little">Join DCA Telegram Group</a></div>
    <div class="col-md-12 sometxt">Each invite a friend to join, you will get an extra 2 DCA, the more invitations, the more reward, hurry!</div>
</div>
<div class="row e-address">
    <input type="hidden" value="@ViewBag.ParentId" name="parentId" class="parId" />
    <div class="form-group col-md-offset-2 col-md-8 e-addr"><input type="text" class="form-control inp" placeholder="Please enter your ETH wallet address" name="ethAddress" required /></div>
    <div class="form-group col-md-offset-2 col-md-8 e-sub"><input type="button" onclick="alert('The activity has come to an end')" class="btn-sub" value="Submit" /></div>
</div>
<div class="modal fade pop-tip" tabindex="-1" role="dialog">
    <div class="alert alert-warning alert-dismissible" tabindex="-1">
        <p class="tip-txt">
        </p>
    </div>
</div>
<div class="row">
    <p class="col-md-offset-1 col-md-10 break-word font-12" style="font-size:12px;">
        DCAex.io is a decentralized global digital copyright assets trading system, providing copyright owners copyright protection, copyright trading, copyright retrieval, infringement monitoring, rights protection assistance and other functional services, copyright brokers can build their own on DCAex.io Rapid and Transparent Digital Creative Cultural Assets Platform
    </p>
</div>

